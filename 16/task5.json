{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "age": {
            "type": "integer",
            "minimum": 1
        },
        "grade": {
            "type": "integer",
            "minimum": 1
        },
        "subjects": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["name", "age", "grade", "subjects"]
}